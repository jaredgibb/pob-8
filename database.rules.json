{
  "rules": {
    "chapters": {
      ".read": true,
      ".write": false
    },
    "terms": {
      ".indexOn": ["chapter"],
      ".read": true,
      ".write": false
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    ".read": false,
    ".write": false
  }
}
